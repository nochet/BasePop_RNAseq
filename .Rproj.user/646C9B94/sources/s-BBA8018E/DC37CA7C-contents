# summarize data

```{r}
# h2fec_sum <- data_summary(h2fec_phenotype, varname="egg_total",
#                     #groupnames=c("supp", "dose")) # if have multiple grouping variables
#                     groupnames="Diet")

h2fec_sum <- h2fec_phenotype %>% 
  group_by(Diet) %>% 
  summarise(egg_total_mean = mean(egg_total, na.rm = TRUE),
            sd = sd(egg_total)) %>% 
  rename(egg_total = egg_total_mean)

# Convert dose to a factor variable
