# per female analysis

```{r}
AA <- read.table('../../Data/Processed/eggs_per_female.txt',
                     sep = "\t", header = TRUE,
                     stringsAsFactors = FALSE)

AA <- AA %>%
   select(flipDate,id,fID,treat,age,sireid,damid,n_females,eggs_per_female)
#AA
AA <- as_tibble(AA)
```

# Prepare data

```{r}
AA <- AA %>%
  rename(Diet = treat) %>%
  mutate(Diet=replace(Diet, Diet=="LY", "DR")) %>%
  mutate(Diet=replace(Diet, Diet=="STD", "C"))
#AA

AA$flipDate <- as.Date(AA$flipDate)

AA <- AA[!is.na(AA$eggs_per_female), ]

# a new grouping variable
AA <- unite(AA, "sire_trt", sireid, Diet, sep = "_", remove=FALSE)
A2 <- aggregate(AA["eggs_per_female"], by=AA["sire_trt"], sum)
```

# Plot mean age per female per day

```{r, fig.height=4, fig.width=12}
#pdf("../../Figures/h2_avg_fecundity_per_female_per_day.pdf",width=12,height=4)

lml <- ggplot(data=AA, aes(x=age, y=eggs_per_female, color=Diet)) +
geom_point(position = position_jitter(width = 0.4), alpha = 0.8) +
scale_color_manual(values=c("#999999", "#E69F00", "#56B4E9"))+
xlab("Age (days)") + ylab("Mean eggs/female/day") +
scale_y_continuous(limits = c(-1,100), expand = c(0, 0)) +
geom_smooth(method = "lm", se = TRUE, color="black")+
facet_grid(.~Diet)
lml
#dev.off()
```







